<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="model" default="$(find dviratis_robotas)/urdf/main.xacro"/>
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.5"/>

    <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model mybot -x $(arg x) -y $(arg y) -z $(arg z)" />

    <rosparam file="$(find dviratis_robotas)/config/my_diff_drive.yaml" command="load" />

    <node name="controller_manageris" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="mobile_base_controller" />


</launch>